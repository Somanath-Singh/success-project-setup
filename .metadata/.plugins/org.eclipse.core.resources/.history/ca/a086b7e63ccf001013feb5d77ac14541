package com.aashdit.construction.utils;

public class ButtonActionUtil {

	public static String getButtonActionLabel(String buttonCode) {
		if (buttonCode == null || buttonCode.trim().isEmpty()) {
			return "Unknown Action";
		}

		switch (buttonCode.toUpperCase()) {
		case "DRAFT":
			return "Save as Draft";
		case "APPROVE":
			return "Approved";
		case "REJECT":
			return "Reject";
		case "SUBMIT_TO_NEXT_LEVEL":
			return "Submit to Next Level";
		case "VERIFY_AT_NEXT_LEVEL":
			return "Verify at Next Level";
		case "REVISED":
			return "Mark as Revised";
		case "PARTIAL_APPROVE":
			return "Partially Approve";
		case "PUBLISH":
			return "Publish";
		case "VERIFY_AND_SEND_FOR_APPROVAL":
			return "Verify and Send for Approval";
		case "CLOSE":
			return "Close";
		case "SEND_FOR_APPROVAL":
			return "Submitted";
		case "REVERT":
			return "Reverted";
		case "APPROVE_PUB":
			return "Approve and Publish";
		default:
			return buttonCode;
		}
	}

}