<script>


function filterData() {
    const startDate = $("#startDate").val();
    const endDate = $("#endDate").val();
    const agencyId = $("#agencyId").val();
    
   if (!startDate) {
    	  bootbox.alert("Start Date is required.");
          return false;
    }else if (!endDate) {
    	  bootbox.alert("End Date is required.");
          return false;
    }else{
    	getProjectDatByFilter(startDate, endDate, agencyId);    	
    }
}

function getProjectDatByFilter(startDate, endDate, agencyId) {
    showLoader();

    $.ajax({
        url: contextPath + "/report/getProjectDatByFilter",
        type: "GET",
        data: {
            startDate: startDate,
            endDate: endDate,
            agencyId: agencyId
        },
        success: function (data) {
            hideLoader();
            
            if ($.fn.DataTable.isDataTable('#projectTable')) {
                $('#projectTable').DataTable().destroy();
            }

            var html = "";

            if (!data || data.length === 0) {
                html = "<tr><td colspan='7' class='text-center text-muted'>No project records found for the selected criteria.</td></tr>";
                $("#projectTableBody").html(html);
                return;
            }

            for (var i = 0; i < data.length; i++) {
                var record = data[i];

                html += "<tr>";
                html += "<td class='text-center'>" + (i+1) + "</td>";
                html += "<td>" + (record.projectName || "N/A") + "</td>";
                html += "<td>" + (record.workOrderCode || "N/A") + "</td>";
                html += "<td>" + (record.startDate || "N/A") + "</td>";
                html += "<td>" + (record.endDate || "N/A") + "</td>";
                html += "<td class='text-end'>" + (record.totalAmt != null ? record.totalAmt.toFixed(2) : "0.00") + "</td>";
                html += "<td class='text-end'>" + (record.releasedAmount != null ? record.releasedAmount.toFixed(2) : "0.00") + "</td>";
                html += "<td class='text-end'>" + (record.remainingAmount != null ? record.remainingAmount.toFixed(2) : "0.00") + "</td>";
                html += "</tr>";
            }

            $("#projectTableBody").html(html);
            
            $('#projectTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'csv', 'pdf', 'print'],
                searching: true,
                paging: true,
                ordering: true,
                pageLength: 10
            });
        },
        error: function (error) {
            hideLoader();
            console.error("Error fetching data:", error);
            bootbox.alert("Error fetching project records.");
        }
    });
}

$(document).ready(function () {
    var today = new Date();
    var oneMonthAgo = new Date();
    oneMonthAgo.setMonth(today.getMonth() - 1);
    
    $(".datepicker").datepick({
        dateFormat: "dd-mm-yyyy",                
        onShow: $.datepick.monthOnly,
        yearRange: "c-20:c+10",
        showOnFocus: true,
        showTrigger: '<button type="button" class="trigger"><i class="fa fa-calendar"></i></button>',
    });
    
    $('#startDate').datepick('setDate', oneMonthAgo);
    $('#endDate').datepick('setDate', today);

    getProjectDatByFilter(
        $("#startDate").val(),
        $("#endDate").val(),
        $("#agencyId").val()
    );
});

</script>