package com.aashdit.prod.heads.hims.ipms.model;

import java.io.Serializable;
import java.util.Date;

import javax.persistence.*;
import org.springframework.format.annotation.DateTimeFormat;
import org.springframework.web.multipart.MultipartFile;

import com.aashdit.prod.heads.framework.core.model.Auditable;
import com.aashdit.prod.heads.hims.umt.model.User;

import lombok.Data;

@Data
@Entity
@Table(name = "t_website_mst_child_content")
public class WebsiteChildContent extends Auditable<User> implements Serializable {

	private static final long serialVersionUID = 1L;

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Column(name = "content_id")
	private Long contentId;

	@Column(name = "child_content_name_en")
	private String childContentNameEn;

	@Column(name = "child_content_name_od")
	private String childContentNameOd;

	@Column(name = "content_name_en")
	private String contentNameEn;

	@Column(name = "content_name_od")
	private String contentNameOd;

	@DateTimeFormat(pattern = "dd/MM/yyyy")
	@Column(name = "publish_date")
	private Date publishDate;

	@DateTimeFormat(pattern = "dd/MM/yyyy")
	@Column(name = "expire_date")
	private Date expireDate;

	@ManyToOne
	@JoinColumn(name = "menu_id")
	private WebMenu menuId;

	@ManyToOne
	@JoinColumn(name = "content_type_id")
	private WebsiteContentType contenTypeId;

	@Column(name = "doc_name")
	private String docName;

	@Column(name = "document_path")
	private String docPath;

	@Column(name = "object_id")
	private Long objectId;

	@Column(name = "is_active")
	private Boolean isActive = true;

	@Transient
	private MultipartFile docWeb;

	@Transient
	private String universityName;

}
