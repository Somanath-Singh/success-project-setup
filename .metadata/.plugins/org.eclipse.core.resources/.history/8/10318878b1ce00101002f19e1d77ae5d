<form id="moduleForm" action="${contextPath}/moduleDirectory" method="post">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    <input type="hidden" name="moduleCode" id="moduleId" />
</form>

<script>
function navigateToModule(moduleCode, isUnderDevelopment) {
    if (isUnderDevelopment === true) {
        bootbox.alert({
            title: "Under Development",
            message: "<i class='fas fa-tools fa-2x text-warning mb-3'></i><br>This module is under development.<br>We'll notify you soon!",
            buttons: { ok: { label: 'Okay', className: 'btn-info' } }
        });
        return;
    }
    localStorage.setItem('currentModuleCode', moduleCode);
    $('#moduleId').val(enc_password(moduleCode));
    $('#moduleForm').submit();
}

// Fullscreen Toggle
function toggleFullscreen() {
    if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
        $('.expandBtn').hide();
        $('#restoreMessage').show();
    } else {
        document.exitFullscreen();
        $('.expandBtn').show();
        $('#restoreMessage').hide();
    }
}

$(document).ready(function() {

    // 9-Dot Menu Toggle
    $('.dot-grid').on('click', function(e) {
        e.stopPropagation();
        $('#icon-menu').toggleClass('show');
    });
    $(document).on('click', function(e) {
        if (!$(e.target).closest('.dot-icon').length) {
            $('#icon-menu').removeClass('show');
        }
    });

    // Role & Entity Switch
    $('#roleSwitcher, #entitySwitcher').change(function() {
        const roleId = $('#roleSwitcher').val();
        const entityIds = $('#entitySwitcher').val() || '';
        if (!roleId) return;

        const entityId = entityIds ? entityIds.split(':')[0] : '';
        $('#hdnRoleId').val(roleId);
        $('#hdnEntityId').val(entityId);
        $('#frmSwitchRole').submit();
    });

    // Auto-select single entity
    if ($('#entitySwitcher option').length === 2 && $('#entitySwitcher').val() === '') {
        $('#entitySwitcher option').eq(1).prop('selected', true).trigger('change');
    }

    // LOGOUT FIXED & WORKING 100%
    $('#switchlogout').off('click').on('click', function(e) {
        e.preventDefault();
        bootbox.confirm({
            message: "Are you sure you want to logout?",
            buttons: {
                confirm: { label: 'Yes, Logout', className: 'btn-danger' },
                cancel: { label: 'Cancel', className: 'btn-secondary' }
            },
            callback: function (result) {
                if (result) {
                    showLoader?.();
                    $("#frmLogout").submit();
                }
            }
        });
    });
});
</script>