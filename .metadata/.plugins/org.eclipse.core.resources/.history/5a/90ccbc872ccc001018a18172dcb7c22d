 <script>
 function findSubHeadListByHeadId(headId){
		$.ajax({
			type : "GET",
			url : '${contextPath}/ecashcommon/findSubHeadListByHeadId',
			dataType : "json",
			data : {
				"headId" : headId,
			},
			success : function(response) {
				var html = "<option value='' selected>-Select-</option>";
				var data = response;
				if (data != "" && data != null && data.length > 0) {
					$.each(data, function(index, value) {
						html = html + "<option value="+value.subHeadId+">"
								+ value.subHeadName + "</option>";
					});
				}
				$('#subHeadId').empty().append(html);
			},
			error : function(error) {
				bootbox.alert("Something went wrong !!!");
			}
		});
}
 
 function findEntityListBySchemeId(schemeId){
		$.ajax({
			type : "GET",
			url : '${contextPath}/ecashcommon/findEntityListBySchemeId',
			dataType : "json",
			data : {
				"schemeId" : schemeId,
			},
			success : function(response) {
				var html = "<option value='' selected>-Select-</option>";
				var data = response;
				if (data != "" && data != null && data.length > 0) {
					$.each(data, function(index, value) {
						html = html + "<option value="+value.entitySchemeId+">"
								+ value.entityName + "</option>";
					});
				}
				$('#entityTypeId').empty().append(html);
			},
			error : function(error) {
				bootbox.alert("Something went wrong !!!");
			}
		});
}
 
 $('.NumbersOnlyForAmount').keypress(
			function(event) {
				var regex = new RegExp("^[0-9.]+$");
				var key = String.fromCharCode(!event.charCode ? event.which
						: event.charCode);
				if (!regex.test(key)) {
					event.preventDefault();
					return false;
				}
});
 
 $(function() {
	 $('.disbursDate').datepick({
				onShow : $.datepick.monthOnly,
				dateFormat : 'dd/mm/yyyy',
				yearRange : "-100:+20",
				maxDate: '0',
				showOnFocus : true,
				showTrigger : '<button type="button" class="trigger">'
						+ '<i class="fa fa-calendar"></i></button>',
			   onSelect: function(selected) {
			     var date = new Date(selected);
			  
			     
					var fyear= $("#finyearId option:selected").text().split("-");
				    	var firstDate = 01 + "/" + 04 + "/" +fyear[0];
				    	var lastDate =  31 + "/" + 03 + "/" +fyear[1];	
					
					var sDate = firstDate.replace(/(\d+[/])(\d+[/])/, '$2$1');
					var tDate = lastDate.replace(/(\d+[/])(\d+[/])/, '$2$1');
					var data1 = new Date(sDate);
					var data2 = new Date(tDate);
				    if((date <= data2 && date >= data1)) {
				    //alert(this.id);
				    }else{
				    	 $("#"+this.id).val("");
				    	 bootbox.alert("Please select date between the financial year .")
				    }
			    }
			}); 
}); 
 
 function saveFundForm(){
	 if($("#finyearId").val() == ""){
		bootbox.alert("Please Select Financial Year.");
		$("#accountNo").focus();
		return false;
	 }else if($("#transDate").val() == ""){
		bootbox.alert("Please select Fund Creation Date.");
		$("#transDate").focus();
		return false;
	 }else if($("#fundTypeId").val() == ""){
		bootbox.alert("Please select Fund Type.");
		$("#fundTypeId").focus();
		return false;
	 }else if($("#turnover1Converted").val() == ""){
		bootbox.alert("Please enter amount .");
		$("#turnover1Converted").focus();
		return false;
	 }else{
		 var flag = window.confirm("Do you want to continue ?");
	  		if (flag == true) {
	  			$('#fundForm select').prop('disabled', false);
	  			$("#fundForm").submit();
	  		}else{
	  			e.preventDefault();
	  		} 
	 }
 }
 
 function getEntityNameByEntityTypeOrDistrictId(){
	 
		entitySchemeId=$("#entityTypeId").val();
		districtId = $("#districtId").val();
		 
		 $.ajax({
				type : "GET",
				url : '${contextPath}/ecashcommon/getEntityNameByEntityTypeOrDistrictId',
				dataType : "json",
				data : {
					"entitySchemeId" : entitySchemeId,
					"districtId" : districtId,
				},
				success : function(response) {
					var html = "<option value='' selected>-Select-</option>";
					var lebelCode = response.lebelCode;
					var data = response.entityList;
					if (data != "" && data != null && data.length > 0) {
						$.each(data, function(index, value) {
							html = html + "<option value="+value.entityBnfMapId+">"
									+ value.entityName + "</option>";
						});
					}
					if(lebelCode=='STATE'){
						$('#entityId').empty().append(html);
						$("#districtDiv").addClass("hidden");
						$("#entityDiv").removeClass("hidden");
					}else if(lebelCode=='DISTRICT'){
						$('#entityId').empty().append(html);
						$("#districtDiv").addClass("hidden");
						$("#entityDiv").removeClass("hidden");
					}else if(lebelCode=='INSTITUTE' && districtId == ''){
						$("#districtDiv").removeClass("hidden");
						$("#entityDiv").removeClass("hidden");
					}else if(lebelCode =='INSTITUTE' && districtId != ''){
						$('#entityId').empty().append(html);
						$("#districtDiv").removeClass("hidden");
						$("#entityDiv").removeClass("hidden");
					}else{
						$("#districtDiv").addClass("hidden");
						$('#entityId').empty().append(html);
						$("#entityDiv").removeClass("hidden");
					}
					$("#entityId").val('${fund.entityBeneficiaryMapping.entityBeneficiaryId}');
				},
				error : function(error) {
					bootbox.alert("Something went wrong !!!");
				}
			});
		 
	 }
 
 $(document).ready(function() {
		$("#fundForm input").prop("disabled", true);
		$('#fundForm select').prop('disabled', true);
		$(".datepick-trigger").prop('disabled', true);
		getEntityNameByEntityTypeOrDistrictId();
	});
 $("#resetId").click(function(){
	 $("#txtRemark").val("");
	 $("#attachedDocument").val("");
 });
 </script>           
