  <div class="card mt-4" id="maintenance-report">
    <div class="card-header">
        <h5 class="card-title">Maintenance Details</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="maintenanceTable" class="table table-bordered table-striped exportbtn">
                <thead class="table-light">
                    <tr>
                    	<th>SL No.</th>
                        <th>Building Name</th>
                        <th>Maintenance Name</th>
                        <th>Status</th>
                        <th>Assigned Users</th>
                        <th>Remark</th>
                    </tr>
                </thead>
                <tbody id="maintenanceTableBody">
                    
                </tbody>
            </table>
        </div>
    </div>
