<script>


function filterData() {
    const startDate = $("#startDate").val();
    const endDate = $("#endDate").val();
    const projectId = $("#projectId").val();
    
   if (!startDate) {
    	  bootbox.alert("Start Date is required.");
          return false;
    }else if (!endDate) {
    	  bootbox.alert("End Date is required.");
          return false;
    }else{
    	getMaintenanceDatByFilter(startDate, endDate, projectId);  	
    }
}

function showLoader() {
    $(".loader-div").css("display", "flex");
}

function hideLoader() {
    $(".loader-div").css("display", "none");
}

function getMaintenanceDatByFilter(startDate, endDate, projectId) {
    showLoader();

    $.ajax({
        url: contextPath + "/report/getMaintenanceDatByFilter",
        type: "GET",
        data: {
            startDate: startDate,
            endDate: endDate,
            projectId: projectId
        },
        success: function (data) {
            hideLoader();
            
            if ($.fn.DataTable.isDataTable('#maintenanceTable')) {
                $('#maintenanceTable').DataTable().destroy();
            }

            var html = "";

            if (!data || data.length === 0) {
                html = "<tr><td colspan='5' class='text-center text-muted'>No maintenance records found for the selected criteria.</td></tr>";
                $("#maintenanceTableBody").html(html);
                return;
            }
            
            for (var i = 0; i < data.length; i++) {
                var record = data[i];

                html += "<tr>";
                html += "<td>" + (i+1) + "</td>";
                html += "<td>" + (record.projectName || "N/A") + "</td>";
                html += "<td>" + (record.maintenanceName || "N/A") + "</td>";
                html += "<td>" + (record.maintenanceStatus || "N/A") + "</td>";

                var userList = "No Users";
                if (record.assignedTaskUserDto && record.assignedTaskUserDto.length > 0) {
                    var names = [];
                    for (var j = 0; j < record.assignedTaskUserDto.length; j++) {
                        var user = record.assignedTaskUserDto[j];
                        names.push(user.userName || "Unknown");
                    }
                    userList = names.join(", ");
                }
                html += "<td>" + userList + "</td>";

                html += "<td>" + (record.remark || "N/A") + "</td>";
                html += "</tr>";
            }

            $("#maintenanceTableBody").html(html);
            
            $('#maintenanceTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'csv', 'pdf', 'print'],
                searching: true,
                paging: true,
                ordering: true,
                pageLength: 10
            });

        },
        error: function (error) {
            hideLoader();
            console.error("Error fetching data:", error);
            bootbox.alert("Error fetching maintenance records.");
        }
    });
}
	

$(document).ready(function () {
    var today = new Date();
    var oneMonthAgo = new Date();
    oneMonthAgo.setMonth(today.getMonth() - 1);
    
    $(".datepicker").datepick({
        dateFormat: "dd-mm-yyyy",                
        onShow: $.datepick.monthOnly,
        yearRange: "c-20:c+10",
        showOnFocus: true,
        showTrigger: '<button type="button" class="trigger"><i class="fa fa-calendar"></i></button>',
    });
    
    $('#startDate').datepick('setDate', oneMonthAgo);
    $('#endDate').datepick('setDate', today);

    getMaintenanceDatByFilter(
        $("#startDate").val(),
        $("#endDate").val(),
        $("#projectId").val()
    ); 
});

</script>