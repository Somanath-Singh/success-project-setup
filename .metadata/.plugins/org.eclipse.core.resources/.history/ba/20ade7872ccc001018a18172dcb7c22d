<script>
	$(function() {
		$('#siteLangSelector').change(function() {
			const lang = $(this).val();
			switchLanguage(lang);
		});
	});

	$('#switchlogout').on('click', function() {
		bootbox.confirm("Are you sure you want to logout ?",function(result){
			if(result){
		$("#frmLogout").submit();
				showLoader();
			}
		});
	});

	$("#langId1").change(function(){
		$('#lang').val(this.value);
		$('#change-lang').submit();
	});
		
</script>
