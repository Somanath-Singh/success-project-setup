<script>

    function getShareEntityDetails(id){
        $("#shareEntityId").val(id);
        var a= $("#shareEntityId").val();
        $("#shareEntityDetails").submit();
    }
    function validate(){
        var role=$("#roleId").val();
        if(role.length==0){
            bootbox.alert("please select role");
            return false;
        }
        $("#mapShareEntity").submit();
    }
</script>

