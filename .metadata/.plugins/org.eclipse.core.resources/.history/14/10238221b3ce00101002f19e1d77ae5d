<script>
// 9-Dot Menu Toggle
$(document).on('click', '.dot-grid', function(e) {
    e.stopPropagation();
    $('#icon-menu').toggleClass('show');
});

$(document).on('click', function(e) {
    if (!$(e.target).closest('.dot-icon').length) {
        $('#icon-menu').removeClass('show');
    }
});

// Fullscreen Toggle (already perfect)
function toggleFullscreen() {
    if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
        $('.fullscreen-btn').hide();
        $('#restoreMessage').show();
        sessionStorage.setItem('isFullscreen', 'true');
    } else {
        document.exitFullscreen();
        $('.fullscreen-btn').show();
        $('#restoreMessage').hide();
        sessionStorage.removeItem('isFullscreen');
    }
}

// Keep all your existing scripts (role switch, logout, password modal, etc.)
// They are all working perfectly
</script>

<!-- Your existing scripts (changePassword, navigateToModule, etc.) go here unchanged -->