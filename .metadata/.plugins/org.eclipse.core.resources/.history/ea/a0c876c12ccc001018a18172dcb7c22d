<form id="actionOnMenuModule" method="post">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
</form>
<script>

    const actionOnRole = async (id) => {
        try {
            const url = '${contextPath}/icon/edit/' + id ;
            const form = document.getElementById('actionOnMenuModule');
            form.action = url;
            form.submit();
        } catch (error) {
            console.error('Encryption or form submission error:', error);
        }
    }



</script>