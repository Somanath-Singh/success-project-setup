<div class="container">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title">Icon For use In Project</h4>
                    </div>
                    <div class="card-body">
                        <form id="iconForm" name="iconForm" action="${contextPath}/icon/save" method="post">
                            <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
                            <input type="hidden" name="iconId" value="${icon.iconId}">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="iconCode" class="required">Icon Code</label>
