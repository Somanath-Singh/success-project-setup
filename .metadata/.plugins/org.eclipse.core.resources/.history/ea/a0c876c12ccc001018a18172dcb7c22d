                                <th>Icon Code</th>
                                <th>Icon View</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <c:forEach var="icon" items="${icons}" varStatus="status">
                                <tr>
                                    <td>${status.index + 1}</td>
                                    <td>${icon.iconName}</td>
                                    <td>${icon.iconCode}</td>
                                    <td><i class="${icon.iconCode}"></i></td>
                                    <td>
                                        <button type="button" class="btn btn-warning btn-sm"
                                                onclick="actionOnRole('${icon.iconId}')">
                                            Edit
                                        </button>
                                    </td>
                                </tr>
                            </c:forEach>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
