	<form action="${contextPath}/procurement/quotation/sendRfq" method="get" id="formm" >
		<input type="hidden" class="" id="requisitionIdencoded" name="requisitionIdencoded" value="" />
	</form>
<script>
	function sendRfq(reqId){
		var requisitionIdencoded= btoa(reqId);
		$("#requisitionIdencoded").val(requisitionIdencoded);
		$("#formm").submit();
	}
</script>