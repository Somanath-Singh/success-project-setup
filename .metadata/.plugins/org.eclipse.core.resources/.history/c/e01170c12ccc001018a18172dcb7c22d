                                                        <td rowspan="2">${count.count}</td>
                                                        <td colspan="6">Store Name : ${lst[0]}</td>
                                                    </tr>
                                                    <tr>
                                                        <td>${lst[1]}</td>
                                                        <td>${lst[2]}</td>
                                                        <td>${lst[3]}</td>
                                                        <td><fmt:formatDate value="${lst[4]}" pattern="dd/MM/yyyy" /></td>
