    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
</form>

<form method="post" action="${contextPath}/overwrite/umt/switchRole" id="frmSwitchRole">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    <input type="hidden" name="roleId" id="hdnRoleId" />
    <input type="hidden" name="entityId" id="hdnEntityId" />
</form>

<form method="post" action="${contextPath}/umt/user/captcha/change/password" id="frmChangePassword">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    <input type="hidden" name="txtPass" id="newPasswordId" />
    <input type="hidden" name="txtRePass" id="confirmPasswordId" />
</form>

<form id="moduleForm" action="${contextPath}/moduleDirectory" method="post">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    <input type="hidden" name="moduleCode" id="moduleId" />
</form>

<script>
// Module Navigation
function navigateToModule(moduleCode, isUnderDevelopment) {
    if (isUnderDevelopment) {
        bootbox.alert({
            title: "Under Development",
            message: "This module is under development.<br>We'll notify you when it's ready!",
            buttons: { ok: { label: 'OK', className: 'btn-info' }
        });
        return;
    }
    localStorage.setItem('currentModuleCode', moduleCode);
    $('#moduleId').val(enc_password(moduleCode));
    $('#moduleForm').submit();
}

// Toggle Module Grid Menu
$(document).ready(function() {
    $('.dot-grid').on('click', function(e) {
        e.stopPropagation();
        $('#icon-menu').toggleClass('show');
    });

    $(document).on('click', function(e) {
        if (!$(e.target).closest('.dot-icon').length) {
            $('#icon-menu').removeClass('show');
        }
    });

    // Role & Entity Switch
    $('#roleSwitcher, #entitySwitcher').change(function() {
        const roleId = $('#roleSwitcher').val();
        const entityIds = $('#entitySwitcher').val() || '';
        if (!roleId) return;

        const entityId = entityIds.split(':')[0] || '';
        $('#hdnRoleId').val(roleId);
        $('#hdnEntityId').val(entityId);
        $('#frmSwitchRole').submit();
    });

    // Auto-select single entity
    if ($('#entitySwitcher option').length === 2 && $('#entitySwitcher').val() === '') {
        $('#entitySwitcher option').eq(1).prop('selected', true).trigger('change');
    }

    // Logout
    $('#switchlogout').click(function() {
        bootbox.confirm("Are you sure you want to logout?", function(result) {
            if (result) {
                showLoader?.();
                $("#frmLogout").submit();
            }
        });
    });
});

// Fullscreen Toggle (Improved)
function toggleFullscreen() {
    if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
        $('.expandBtn').hide();
        $('#restoreMessage').show();
    } else {
        document.exitFullscreen();
        $('.expandBtn').show();
        $('#restoreMessage').hide();
    }
}
</script>