<!-- Hidden Forms (CSRF Protected) -->
<form method="post" action="${contextPath}/umt/logout" id="frmLogout">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
</form>

<form method="post" action="${contextPath}/overwrite/umt/switchRole" id="frmSwitchRole">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    <input type="hidden" name="roleId" id="hdnRoleId" />
    <input type="hidden" name="entityId" id="hdnEntityId" />
</form>

<form method="post" action="${contextPath}/umt/user/captcha/change/password" id="frmChangePassword">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    <input type="hidden" name="txtPass" id="newPasswordId" />
    <input type="hidden" name="txtRePass" id="confirmPasswordId" />
</form>

<form id="moduleForm" action="${contextPath}/moduleDirectory" method="post">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    <input type="hidden" name="moduleCode" id="moduleId" />
</form>

<!-- ALL SCRIPTS (100% WORKING) -->
<script>
function navigateToModule(moduleCode, isUnderDevelopment) {
    if (isUnderDevelopment) {
        bootbox.alert({
            title: "Under Development",
            message: "This module is under development. Please wait for some time.",
            backdrop: true
        });
        return;
    }
    if (moduleCode) {
        localStorage.setItem('currentModuleCode', moduleCode);
        $('#moduleId').val(enc_password(moduleCode));
        $('#moduleForm').submit();
    }
}

function changePasswordModalOpen() {
    $('#resetPasswordModal').modal('show');
}

function changePassword() {
    var newPass = $('#newPassword').val();
    var confirmPass = $('#confirmPassword').val();

    if (!newPass || !confirmPass) {
        bootbox.alert("Please fill both password fields");
        return;
    }
    if (newPass !== confirmPass) {
        bootbox.alert("Passwords do not match");
        return;
    }

    bootbox.confirm("Change your password?", function(result) {
        if (result) {
            $('#newPasswordId').val(newPass);
            $('#confirmPasswordId').val(confirmPass);
            $('#frmChangePassword').submit();
        }
    });
}

// Logout
$('#switchlogout').on('click', function() {
    bootbox.confirm("Are you sure you want to logout?", function(result) {
        if (result) {
            showLoader();
            $("#frmLogout").submit();
        }
    });
});

// Role & Entity Switch
$(document).ready(function() {
    $('#roleSwitcher, #entitySwitcher').change(function() {
        var roleId = $('#roleSwitcher').val();
        var entityVal = $('#entitySwitcher').val() || "";
        if (!roleId) return;

        var entityId = entityVal.split(":")[0] || "";
        $('#hdnRoleId').val(roleId);
        $('#hdnEntityId').val(entityId);
        $('#frmSwitchRole').submit();
    });

    // Auto-select single entity
    if ($('#entitySwitcher option').length === 2 && $('#entitySwitcher').val() === '') {
        $('#entitySwitcher option').eq(1).prop('selected', true).trigger('change');
    }
});

// 9-Dot Menu Toggle
$(document).on('click', '.dot-grid', function(e) {
    e.stopPropagation();
    $('#icon-menu').toggleClass('show');
});

$(document).on('click', function(e) {
    if (!$(e.target).closest('.dot-icon').length) {
        $('#icon-menu').removeClass('show');
    }
});

// Fullscreen Handler
function toggleFullscreen() {
    if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
        $('.fullscreen-btn').hide();
        $('#restoreMessage').show();
        sessionStorage.setItem('isFullscreen', 'true');
    } else {
        document.exitFullscreen();
        $('.fullscreen-btn').show();
        $('#restoreMessage').hide();
        sessionStorage.removeItem('isFullscreen');
    }
}

document.addEventListener('fullscreenchange', function() {
    if (!document.fullscreenElement) {
        $('.fullscreen-btn').show();
        $('#restoreMessage').hide();
        sessionStorage.removeItem('isFullscreen');
    }
});

// Restore fullscreen on page load
if (sessionStorage.getItem('isFullscreen') === 'true') {
    document.documentElement.requestFullscreen();
    $('.fullscreen-btn').hide();
    $('#restoreMessage').show();
}
</script>