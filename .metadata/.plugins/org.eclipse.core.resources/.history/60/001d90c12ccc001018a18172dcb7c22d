</form>
<form id="subForm" action="${contextPath}/fnd/expenditure/list">
	<input id="status" name="status" type="hidden"> 
</form>
<script >
	function viewExpenditureDtlsById(budgetId){
		debugger;
		$("#formId").attr('action','${contextPath}/fnd/expenditure/view/'+ budgetId +'');
	    $("#formId").submit();
	}
	function editExpenditureDtlsById(expenditureId){
		$("#expendId").val(expenditureId);
	    $("#editFormId").submit();
	}
	
	function getFormData(status){
		
		$("#status").val(status);
		
		$("#subForm").submit();
	}
</script>
                               